<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Data</title>
</head>
<body>
    <%- include('../layouts/main-layouts.ejs'); %>
    <div class="container">
        <% if (typeof errors !='undefined') { %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% errors.forEach(e => { %>
            <li><%= e.msg %></li>
            <% }) %>
          </ul>
        </div>
        <% } %>
      
        <form method="POST" action="/dashboard?_method=PUT">
          <input type="hidden" name="_id" value="<%= dashboard._id %>" />
          <div class="form-group">
            <label for="image">Image</label>
            <input
              type="text"
              class="form-control"
              id="imagePath"
              name="imagePath"
              value="<%= dashboard.imagePath %>"
            />
          </div>
          <div class="form-group">
            <label for="link">Link</label>
            <input
              type="text"
              class="form-control"
              id="link"
              name="link"
              value="<%= dashboard.link %>"
            />
          </div>
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              value="<%= dashboard.name %>"
            />
          </div>
          <div class="form-group">
            <label for="price">Price</label>
            <input
              type="text"
              class="form-control"
              id="price"
              name="price"
              value="<%= dashboard.price %>"
            />
          </div>
      
          <button type="submit" class="btn btn-primary">Edit</button>
        </form>
      </div>
      
</body>
</html>